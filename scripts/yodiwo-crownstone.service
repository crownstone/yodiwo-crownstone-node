[Unit]
Description=Yodiwo Crownstone Service
Documentation=https://github.com/crownstone/yodiwo-crownstone-node

[Service]
Type=forking
Environment=DISPLAY=:0
RuntimeDirectory=crownstone
RuntimeDirectoryMode=0755
ExecStart=/usr/local/bin/yodiwo-crownstone.sh start

[Install]
WantedBy=default.target
